<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="myo_community_view_form" model="ir.ui.view">
            <field name="name">myo.community.form</field>
            <field name="model">myo.community</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Communities" version="7.0">
                    <sheet string="Community">
                        <div class="oe_center" name="center">
                            <!-- Put here related fields -->
                            <label for="parent_id" class="oe_edit_only"/>
                            <h2>
                                <field name="parent_id" placeholder="Parent Community..." options="{'no_open': False, 'no_create': True}"/>
                            </h2>
                            <!--label for="name" class="oe_edit_only"/-->
                            <label for="name"/>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name..."/>
                            </h1>
                        </div>
                        <div class="oe_title">
                            <!--label for="alias" class="oe_edit_only"/-->
                            <label for="alias"/>
                            <h2>
                                <field name="alias" placeholder="Alias..."/>
                            </h2>
                            <!--label for="code" class="oe_edit_only"/-->
                            <label for="code"/>
                            <h3>
                                <field name="code" placeholder="Community Code..."/>
                            </h3>
                            <label for="user_id"/>
                            <h3>
                                <field name="user_id" class="oe_inline"/>
                            </h3>
                        </div>
                        <div class="oe_right oe_button_box" name="button_box">
                            <!-- Put here related buttons -->
                        </div>
                        <notebook>
                            <page name="public_information" string="Public Information">
                                <group>
                                    <group string="Status">
                                        <field name="date_inclusion"/>
                                    </group>
                                </group>
                                <field name="notes" placeholder="Notes..." colspan="4"/>
                            </page>
                            <page name="settings" string="Settings" groups="myo_base.group_rmanager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="myo_community_view_tree" model="ir.ui.view">
            <field name="name">myo.community.tree</field>
            <field name="model">myo.community</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Community">
                    <!--field name="name"/-->
                    <field name="complete_name"/>
                    <field name="alias"/>
                    <field name="code"/>
                    <field name="user_id"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>
        
        <record id="myo_community_view_search" model="ir.ui.view">
            <field name="name">myo.community.search</field>
            <field name="model">myo.community</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Community">
                    <field name="name"/>
                    <field name="alias"/>
                    <field name="code"/>
                    <field name="notes"/>
                    <separator/>
                    <group expand="0" string="Group By...">
                    </group>
                </search>
            </field>
        </record>
        
        <record id="myo_community_action" model="ir.actions.act_window">
            <field name="name">Communities</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">myo.community</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="myo_community_view_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new community.
              </p>
            </field>
        </record>
        
    </data>
</openerp>
