<openerp>
  <data>

    <record id="view_form_myo_address_person_wizard" model="ir.ui.view">
      <field name="name">view_form_myo_address_person_wizard</field>
      <field name="model">myo.address.person.wizard</field>
      <field name="arch" type="xml">

        <form>
            <div class="oe_right">
                <button type="object" name="do_count_address_persons"
                        string="Count"/>
                <button type="object" name="do_populate_address_persons"
                        string="Get All"/>
            </div>
            <field name="address_person_ids"/>
            <group>
                <group><field name="new_active"/></group>
            </group>
            <footer>
                <button type="object" name="do_mass_update"
                    string="Mass Update" class="oe_highlight"
                    />
                <button special="cancel" string="Cancel"/>
            </footer>
        </form>

      </field>
    </record>

    <!-- More button Action -->
    <act_window id="action_myo_address_person_wizard"
        name="Set Active (Address Person)"
        src_model="myo.address.person"
        res_model="myo.address.person.wizard"
        view_mode="form"
        target="new"/>

  </data>
</openerp>
