<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="_myo_address_person_view_form" model="ir.ui.view">
            <field name="name">myo.address.person.form</field>
            <field name="model">myo.address.person</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Addresses" version="7.0">
                    <sheet>
                        <group>
                            <field name="person_id" options="{'no_open': False, 'no_create': True}"/>
                            <field name="address_id" default_focus="1" options="{'no_open': False, 'no_create': True}"/>
                            <field name="role_id" default_focus="1" options="{'no_open': False, 'no_create': True}"/>
                            <field name="sign_in_date"/>
                            <field name="sign_out_date"/>
                        </group>
                        <label for="notes" class="oe_edit_only"/>
                        <field name="notes" addressholder="Notes..."/>
                        <notebook>
                            <page string="Settings" myo_persons="myobase.myo_person_manager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="myo_address_person_view_tree" model="ir.ui.view">
            <field name="name">myo.address.person.tree</field>
            <field name="model">myo.address.person</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Addresses" colors="red:sign_out_date != False;blue:sign_out_date == False">
                    <field name="person_id"/>
                    <field name="address_id"/>
                    <field name="role_id"/>
                    <field name="sign_in_date"/>
                    <field name="sign_out_date"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>
        
        <record id="myo_address_person_view_search" model="ir.ui.view">
            <field name="name">myo.address.person.search</field>
            <field name="model">myo.address.person</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Addresses">
                    <field name="person_id"/>
                    <field name="address_id"/>
                    <field name="role_id"/>
                    <field name="sign_in_date"/>
                    <field name="sign_out_date"/>
                    <field name="notes"/>
                    <newline/>
                    <filter name="opened_address" string="Opened Address" domain="[('sign_out_date','=',False)]"/>
                    <filter name="closed_address" string="Closed Address" domain="[('sign_out_date','!=',False)]"/>
                    <filter name="not_active" string="Not Active" domain="[('active','=',False)]"/>
                    <group expand="0" string="Group By...">
                        <filter string="Person" domain="[]" context="{'group_by':'person_id'}"/>
                        <filter string="Address" domain="[]" context="{'group_by':'address_id'}"/>
                        <filter string="Role" domain="[]" context="{'group_by':'role_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="myo_address_person_actions" model="ir.actions.act_window">
            <field name="name">Addresses</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">myo.address.person</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="myo_address_person_view_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new person address.
              </p>
            </field>
        </record>
        
        <record id="myo_person_view_form_address_person" model="ir.ui.view">
            <field name="name">myo.person.form</field>
            <field name="model">myo.person</field>
            <field name="inherit_id" ref="myo_person_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <page name="settings" position="before">
                    <page string="Addresses">
                        <field name="address_person_ids" colspan="4" nolabel="1">
                            <group>
                                <tree string="Addresses" colors="red:sign_out_date != False;blue:sign_out_date == False">
                                    <field name="address_id"/>
                                    <field name="role_id"/>
                                    <field name="sign_in_date"/>
                                    <field name="sign_out_date"/>
                                    <field name="notes"/>
                                </tree>
                            </group>
                        </field>
                    </page>
                </page>
            </field>
        </record>

        <record id="myo_address_view_form_address_person" model="ir.ui.view">
            <field name="name">myo.address.form</field>
            <field name="model">myo.address</field>
            <field name="inherit_id" ref="myo_address.myo_address_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <page name="settings" position="before">
                    <page string="Address Persons">
                        <group>
                            <field name="count_address_persons"/>
                            <field name="address_person_ids" colspan="4" nolabel="1"/>
                                <!--tree string="Persons" colors="red:sign_out_date != False;blue:sign_out_date == False">
                                    <field name="person_id"/>
                                    <field name="role_id"/>
                                    <field name="sign_in_date"/>
                                    <field name="sign_out_date"/>
                                    <field name="notes"/>
                                </tree-->
                        </group>
                    </page>
                </page>
            </field>
        </record>

        <record id="myo_address_view_tree_address_person" model="ir.ui.view">
            <field name="name">myo.address.tree</field>
            <field name="model">myo.address</field>
            <field name="inherit_id" ref="myo_address.myo_address_view_tree"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="count_address_persons"/>
                </field>
            </field>
        </record>

    </data>
</openerp>

