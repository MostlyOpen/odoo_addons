<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="myo_medicament_group_view_form" model="ir.ui.view">
            <field name="name">myo.medicament.group.form</field>
            <field name="model">myo.medicament.group</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Medicament Groups" version="7.0">
                    <sheet string="Medicament Group">
                        <div class="oe_center" name="center">
                            <!-- Put here related fields -->
                            <!--label for="name" class="oe_edit_only"/-->
                            <label for="name"/>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name..."/>
                            </h1>
                        </div>
                        <!--field name="image_medium" widget='image' class="oe_left oe_avatar"/-->
                        <div class="oe_title">
                            <!--label for="alias" class="oe_edit_only"/-->
                            <label for="alias"/>
                            <h2>
                                <field name="alias" placeholder="Alias..."/>
                            </h2>
                            <!--label for="code" class="oe_edit_only"/-->
                            <label for="code"/>
                            <h3>
                                <field name="code" placeholder="Medicament Group Code..."/>
                            </h3>
                        </div>
                        <div class="oe_right oe_button_box" name="button_box">
                            <!-- Put here related buttons -->
                        </div>
                        <notebook>
                            <page string="Group Information">
                                <group>
                                    <group string="Medicament">
                                        <field name="medicament_name"/>
                                        <field name="active_component_id" options="{'no_open': False, 'no_create': True}"/>
                                        <field name="concentration"/>
                                        <field name="pres_form_id" options="{'no_open': False, 'no_create': True}"/>
                                    </group>
                                    <group string="Status">
                                        <field name="date_inclusion"/>
                                    </group>
                                </group>
                                <field name="notes" placeholder="Notes..." colspan="4"/>
                            </page>
                            <page name="settings" string="Settings" groups="myo_base.group_rmanager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="myo_medicament_group_view_tree" model="ir.ui.view">
            <field name="name">myo.medicament.group.tree</field>
            <field name="model">myo.medicament.group</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Medicament Group">
                    <field name="name"/>
                    <field name="alias"/>
                    <field name="code"/>
                    <field name="active_component_id"/>
                    <field name="concentration"/>
                    <field name="pres_form_id"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>
        
        <record id="myo_medicament_group_view_search" model="ir.ui.view">
            <field name="name">myo.medicament.group.search</field>
            <field name="model">myo.medicament.group</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Medicament Group">
                    <field name="name"/>
                    <field name="alias"/>
                    <field name="code"/>
                    <field name="active_component_id"/>
                    <field name="concentration"/>
                    <field name="pres_form_id"/>
                    <field name="notes"/>
                    <separator/>
                    <group expand="0" string="Group By...">
                        <filter string="Active Component" domain="[]" context="{'group_by': 'active_component_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record id="myo_medicament_group_action" model="ir.actions.act_window">
            <field name="name">Medicament Groups</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">myo.medicament.group</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="myo_medicament_group_view_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new Medicament Group.
              </p>
            </field>
        </record>
        
    </data>
</openerp>
