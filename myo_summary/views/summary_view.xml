<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="myo_summary_view_form" model="ir.ui.view">
            <field name="name">myo.summary.form</field>
            <field name="model">myo.summary</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Summaries" version="7.0">
                    <sheet name="summary" string="Summary">
                        <div class="oe_center" name="center">
                            <!-- Put here related fields -->
                            <!--label for="name" class="oe_edit_only"/-->
                            <label for="name"/>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Summary Name..."/>
                            </h1>
                        </div>
                        <!--field name="image_medium" widget='image' class="oe_left oe_avatar"/-->
                        <div class="oe_title">
                            <!--label for="code" class="oe_edit_only"/-->
                            <label for="code"/>
                            <h3>
                                <field name="code" placeholder="Summary Code..."/>
                            </h3>
                            <!--label for="user_id" class="oe_edit_only"/-->
                            <label for="user_id"/>
                            <h3>
                                <field name="user_id" placeholder="Summary Responsible..." options="{'no_open': False, 'no_create': True}"/>
                            </h3>
                            <group name="group_title">
                                <group name="group_title_left">
                                    <field name="date_summary"/>
                                </group>
                                <group name="group_title_right">
                                </group>
                            </group>
                            <group name="group_title_bottom">
                            </group>
                        </div>
                        <div class="oe_right oe_button_box" name="button_box">
                            <!-- Put here related buttons -->
                        </div>
                        <group name="group_top">
                            <group name="group_top_left">
                            </group>
                            <group name="group_top_right">
                            </group>
                        </group>
                        <group name="group_bottom">
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="notes" placeholder="Notes..." colspan="4"/>
                            </page>
                            <page name="settings" string="Settings" groups="myo_base.group_rmanager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="myo_summary_view_tree" model="ir.ui.view">
            <field name="name">myo.summary.tree</field>
            <field name="model">myo.summary</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree name="summarys" string="Summaries">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="date_summary"/>
                    <field name="user_id"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>
        
        <record id="myo_summary_view_search" model="ir.ui.view">
            <field name="name">myo.summary.search</field>
            <field name="model">myo.summary</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Summary">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="date_summary"/>
                    <field name="user_id"/>
                    <field name="notes"/>
                    <separator/>
                    <group name="group_by" string="Group By...">
                        <filter string="Summary Responsible" domain="[]" context="{'group_by':'user_id'}"/>
                        <filter string="Summary Date" domain="[]" context="{'group_by': 'date_summary'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record id="myo_summary_view_graph" model="ir.ui.view">
            <field name="name">myo.summary.graph</field>
            <field name="model">myo.summary</field>
            <field name="arch" type="xml">
                <graph type="pivot">
                    <!--field name="date_summary" interval="week"/-->
                    <field name="user_id"/>
                </graph>
            </field>
        </record>

        <record id="myo_summary_action" model="ir.actions.act_window">
            <field name="name">Summaries</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">myo.summary</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="search_view_id" ref="myo_summary_view_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new summary.
              </p>
            </field>
        </record>
        
    </data>
</openerp>
