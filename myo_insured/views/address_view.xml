<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        
        <record id="myo_address_view_form_insured" model="ir.ui.view">
            <field name="name">myo.address.form</field>
            <field name="model">myo.address</field>
            <field name="inherit_id" ref="myo_address.myo_address_view_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <page name="settings" position="before">
                    <page string="Insureds">
                        <group>
                            <field name="insured_ids" colspan="4" nolabel="1" />
                        </group>
                    </page>
                </page>
            </field>
        </record>

        <record id="myo_insured_view_form_address" model="ir.ui.view">
            <field name="name">myo.insured.form</field>
            <field name="model">myo.insured</field>
            <field name="inherit_id" ref="myo_insured_view_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <group name="status" position="before">
                    <group string="Contact Information">
                        <field name="address_id" context="{'show_address': 1}" options='{"always_reload": True, "highlight_first_line": True, "no_open": False, "no_create": True}'/>
                        <field name="insured_email" widget="email"/>
                        <field name="insured_phone"/>
                        <field name="mobile_phone"/>
                    </group>
                </group>
            </field>
        </record>

        <record id="myo_insured_view_search_address" model="ir.ui.view">
            <field name="name">myo.insured.search</field>
            <field name="model">myo.insured</field>
            <field name="inherit_id" ref="myo_insured_view_search"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <group name="group_by" position="inside">
                    <filter string="Address" context="{'group_by': 'address_id'}"/>
                </group>
            </field>
        </record>

    </data>
</openerp>
