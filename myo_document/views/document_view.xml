<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="_myo_document_view_form" model="ir.ui.view">
            <field name="name">myo.document.form</field>
            <field name="model">myo.document</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Documents" version="7.0">
                    <sheet string="Document">
                        <div class="oe_center" name="center">
                            <!-- Put here related fields -->
                            <!--label for="name" class="oe_edit_only"/-->
                            <label for="name" groups="myo_base.group_document_approver"/>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Document Code..." groups="myo_base.group_document_approver"/>
                            </h1>
                        </div>
                        <!--field name="image_medium" widget='image' class="oe_left oe_avatar"/-->
                        <div class="oe_title">
                            <!--label for="date_requested" class="oe_edit_only"/-->
                            <label for="date_requested"/>
                            <h3>
                                <field name="date_requested" placeholder="Date requested..."/>
                            </h3>
                            <!--label for="date_document" class="oe_edit_only"/-->
                            <label for="date_document"/>
                            <h3>
                                <field name="date_document" placeholder="Document Date..."/>
                            </h3>
                            <!--label for="responsible" class="oe_edit_only"/-->
                            <label for="responsible"/>
                            <h3>
                                <field name="responsible" placeholder="Document Responsible..." options="{'no_open': False, 'no_create': True}"/>
                            </h3>
                        </div>
                        <div class="oe_right oe_button_box" name="button_box">
                            <!-- Put here related buttons -->
                        </div>
                        <notebook>
                            <page string="Document Information">
                                <field name="notes" placeholder="Notes..." colspan="4"/>
                            </page>
                            <page string="Settings" groups="myo_base.group_rmanager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="myo_document_view_tree" model="ir.ui.view">
            <field name="name">myo.document.tree</field>
            <field name="model">myo.document</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Document">
                    <field name="name" groups="myo_base.group_document_approver"/>
                    <field name="date_requested"/>
                    <field name="date_document"/>
                    <field name="responsible"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>
        
        <record id="myo_document_view_search" model="ir.ui.view">
            <field name="name">myo.document.search</field>
            <field name="model">myo.document</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Document">
                    <field name="name"/>
                    <field name="date_requested"/>
                    <field name="date_document"/>
                    <field name="responsible"/>
                    <field name="notes"/>
                    <separator/>
                    <group expand="0" string="Group By...">
                        <filter string="Document Responsible" domain="[]" context="{'group_by':'responsible'}"/>
                        <filter string="Document Date" domain="[]" context="{'group_by': 'date_document'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record id="myo_document_action" model="ir.actions.act_window">
            <field name="name">Documents</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">myo.document</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="myo_document_view_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new document.
              </p>
            </field>
        </record>
        
    </data>
</openerp>
