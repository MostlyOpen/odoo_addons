<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        
        <record id="myo_animal_view_form_log" model="ir.ui.view">
            <field name="name">myo.animal.form</field>
            <field name="model">myo.animal</field>
            <field name="inherit_id" ref="myo_animal.myo_animal_view_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <page name="settings" position="after">
                    <!--page string="Log" groups="myo_base.group_rmanager" attrs="{'invisible': ['|', ('active_log', '=', False)]}"-->
                    <page string="Log" groups="myo_base.group_rmanager">
                        <group name="record_log">
                            <group name="creation" >
                                <field name="create_uid" readonly="True"/>
                                <field name="create_date" readonly="True"/>
                            </group>
                            <group name="last_update" >
                                <field name="write_uid" readonly="True"/>
                                <field name="write_date" readonly="True"/>
                            </group>
                        </group>
                        <field name="log_ids" colspan="4" nolabel="1">
                            <tree string="Animal Log">
                                <!--field name="animal_id"/-->
                                <field name="user_id"/>
                                <field name="date_log"/>
                                <field name="values"/>
                                <field name="action"/>
                                <field name="notes"/>
                            </tree>
                        </field>
                    </page>
                </page>
                <field name="active" position="after">
                    <field name="active_log"/>
                </field>
            </field>
        </record>

        <record id="myo_animal_log_view_form" model="ir.ui.view">
            <field name="name">myo.animal.log.form</field>
            <field name="model">myo.animal.log</field>
            <field name="arch" type="xml">
                <form string="Animal Log" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="animal_id" class="oe_edit_only"/>
                            <h2>
                                <field name="animal_id" placeholder="Animal..." readonly="True"/>
                            </h2>
                            <label for="user_id" class="oe_edit_only"/>
                            <h1>
                                <field name="user_id" default_focus="1" placeholder="User..." readonly="True"/>
                            </h1>
                            <label for="date_log" class="oe_edit_only"/>
                            <h3>
                                <field name="date_log" placeholder="When..." readonly="True"/>
                            </h3>
                            <label for="values" class="oe_edit_only"/>
                            <field name="values" placeholder="Values..."/>
                            <label for="action" class="oe_edit_only"/>
                            <field name="action" placeholder="Values..."/>
                            <label for="notes" class="oe_edit_only"/>
                            <field name="notes" placeholder="Notes..."/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="myo_animal_log_view_tree" model="ir.ui.view">
            <field name="name">myo.animal.log.tree</field>
            <field name="model">myo.animal.log</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Animal Log">
                        <field name="animal_id"/>
                        <field name="user_id"/>
                        <field name="date_log"/>
                        <field name="values"/>
                        <field name="action"/>
                        <field name="notes"/>
                </tree>
            </field>
        </record>
        
    </data>
</openerp>
