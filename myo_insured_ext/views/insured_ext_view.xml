<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="myo_insured_ext_view_form" model="ir.ui.view">
            <field name="name">myo.insured.ext.form</field>
            <field name="model">myo.insured.ext</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Insureds (Ext)" version="7.0">
                    <sheet string="Insured (Ext)">
                        <div class="oe_center" name="center">
                            <!-- Put here related fields -->
                            <!--label for="name" class="oe_edit_only"/-->
                            <label for="name"/>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name..."/>
                            </h1>
                        </div>
                        <div class="oe_title">
                            <!--label for="code" class="oe_edit_only"/-->
                            <label for="code"/>
                            <h3>
                                <field name="code" placeholder="Insured Code..."/>
                            </h3>
                        </div>
                        <div class="oe_right oe_button_box" name="button_box">
                            <!-- Put here related buttons -->
                        </div>
                        <notebook>
                            <page string="Public Information">
                                <group>
                                    <group name="Status">
                                        <!--field name="state" readonly="1"/-->
                                        <field name="synchronized"/>
                                        <field name="date_synchronization"/>
                                        <field name="processing_synchronization"/>
                                        <field name="date_previous_synchronization"/>
                                        <field name="date_inclusion"/>
                                    </group>
                                </group>
                                <field name="notes" placeholder="Other Information ..." colspan="4"/>
                            </page>
                            <page string="Personal Information" groups="myo_base.group_suser">
                                <group>
                                    <group name="Other Info">
                                        <field name="identification_id"/>
                                        <field name="otherid"/>
                                    </group>
                                    <group name="Contact Information">
                                        <field name="zip_code"/>
                                    </group>
                                    <group name="Status">
                                        <field name="gender"/>
                                    </group>
                                    <group name="Birth">
                                        <field name="birthday"/>
                                        <field name="age"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Settings" groups="myo_base.group_rmanager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="myo_insured_ext_view_tree" model="ir.ui.view">
            <field name="name">myo.insured.ext.tree</field>
            <field name="model">myo.insured.ext</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Insured (Ext)">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="birthday"/>
                    <field name="age"/>
                    <field name="synchronized"/>
                    <field name="date_synchronization"/>
                    <field name="processing_synchronization"/>
                    <field name="date_previous_synchronization"/>
                    <field name="notes" colspan="4"/>
                </tree>
            </field>
        </record>
        
        <record id="myo_insured_ext_view_search" model="ir.ui.view">
            <field name="name">myo.insured.ext.search</field>
            <field name="model">myo.insured.ext</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Insured (Ext)">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="synchronized"/>
                    <field name="date_synchronization"/>
                    <field name="processing_synchronization"/>
                    <field name="date_previous_synchronization"/>
                    <field name="notes"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Synchronized" domain="[]" context="{'group_by': 'synchronized'}"/>
                        <filter string="Synchronization Date" domain="[]" context="{'group_by': 'date_synchronization'}"/>
                        <filter string="Processing Synchronization" domain="[]" context="{'group_by': 'processing_synchronization'}"/>
                        <filter string="Previous Synchronization Date" domain="[]" context="{'group_by': 'date_previous_synchronization'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record id="myo_insured_ext_action" model="ir.actions.act_window">
            <field name="name">Insureds (Ext)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">myo.insured.ext</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="myo_insured_ext_view_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new Insured (Ext).
              </p>
            </field>
        </record>
        
    </data>
</openerp>
