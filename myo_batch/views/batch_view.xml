<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="myo_batch_view_form" model="ir.ui.view">
            <field name="name">myo.batch.form</field>
            <field name="model">myo.batch</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Batches" version="7.0">
                    <sheet string="Batch">
                        <div class="oe_center" name="center">
                            <!-- Put here related fields -->
                            <div>
                                <label for="name"/>
                            </div>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Batch Name..."/>
                            </h1>
                        </div>
                        <div class="oe_title">
                            <label for="alias" class="oe_edit_only"/>
                            <h2>
                                <field name="alias" placeholder="Alias..."/>
                            </h2>
                            <label for="code" class="oe_edit_only"/>
                            <h3>
                                <field name="code" placeholder="Batch Code..."/>
                            </h3>
                            <label for="description" class="oe_edit_only"/>
                            <h3>
                                <field name="description" placeholder="Description..."/>
                            </h3>
                        </div>
                        <div class="oe_right oe_button_box" name="button_box">
                            <!-- Put here related buttons -->
                        </div>
                        <notebook>
                            <page string="Information">
                                <group>
                                    <group string="Status">
                                        <field name="date_inclusion"/>
                                    </group>
                                </group>
                                <field name="notes" placeholder="Notes..." colspan="4"/>
                            </page>
                            <page string="Origin Batches">
                                <group>
                                    <field name="origin_batch_ids" colspan="4" nolabel="1"/>
                                </group>
                            </page>
                            <page string="Derived Batches">
                                <group>
                                    <field name="derived_batch_ids" colspan="4" nolabel="1"/>
                                </group>
                            </page>
                            <page name="settings" string="Settings" groups="myo_base.group_rmanager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="myo_batch_view_tree" model="ir.ui.view">
            <field name="name">myo.batch.tree</field>
            <field name="model">myo.batch</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Batches">
                    <field name="name"/>
                    <field name="origin_batch_ids"/>
                    <field name="alias"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="notes" colspan="4"/>
                </tree>
            </field>
        </record>

        <record id="myo_batch_view_search" model="ir.ui.view">
            <field name="name">myo.batch.search</field>
            <field name="model">myo.batch</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Batch">
                    <field name="name"/>
                    <field name="origin_batch_ids"/>
                    <field name="code"/>
                    <field name="alias"/>
                    <separator/>
                    <group expand="0" string="Group By...">
                    </group>
                </search>
            </field>
        </record>

        <record id="myo_batch_action" model="ir.actions.act_window">
            <field name="name">Batches</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">myo.batch</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="myo_batch_view_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new batch.
              </p>
            </field>
        </record>

    </data>
</openerp>
