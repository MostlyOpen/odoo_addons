<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="myo_annotation_view_form" model="ir.ui.view">
            <field name="name">myo.annotation.form</field>
            <field name="model">myo.annotation</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Annotation" version="7.0">
                    <sheet string="Annotation">
                        <div class="oe_center" name="center">
                            <!-- Put here related fields -->
                        </div>
                        <label for="name" class="oe_edit_only"/>
                        <h2>
                            <field name="name" default_focus="1" placeholder="Subject..."/>
                        </h2>
                        <label for="body" class="oe_edit_only"/>
                        <h3>
                            <field name="body" colspan="4" nolabel="1" placeholder="Annotations..."/>
                        </h3>
                        <group>
                            <field name="date"/>
                            <field name="author"/>
                            <field name="code" placeholder="Annotation Code..."/>
                        </group>
                        <div class="oe_right oe_button_box" name="button_box">
                            <!-- Put here related buttons -->
                        </div>
                        <notebook>
                            <page name="annotation_for" string="Annotation for">
                                <group name="Annotation for">
                                    <!-- Put here related objects -->
                                </group>
                            </page>
                            <page name="settings" string="Settings" groups="myo_base.group_rmanager">
                                <group>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="myo_annotation_view_tree" model="ir.ui.view">
            <field name="name">myo.annotation.tree</field>
            <field name="model">myo.annotation</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Annotations">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="author"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>
        
        <record id="myo_annotation_view_search" model="ir.ui.view">
            <field name="name">myo.annotation.search</field>
            <field name="model">myo.annotation</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Annotation">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="author"/>
                    <field name="date"/>
                    <field name="body"/>
                    <separator/>
                    <filter string="Inactive Annotations" name="active" domain="[('active','=',0)]" help="Inactive Annotations"/>
                    <group expand="0" string="Group By...">
                        <filter string="Author" domain="[]" context="{'group_by':'author'}"/>
                        <filter string="Date" domain="[]" context="{'group_by':'date'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record id="myo_annotation_action" model="ir.actions.act_window">
            <field name="name">Annotations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">myo.annotation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="myo_annotation_view_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a new annotation.
              </p>
            </field>
        </record>
        
    </data>
</openerp>
